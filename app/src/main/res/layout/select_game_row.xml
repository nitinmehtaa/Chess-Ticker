<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_marginTop="32px"
    android:layout_marginBottom="32px"
    android:layout_marginLeft="32px"
    android:layout_marginRight="32px"
    android:background="#ffffff"
    android:elevation="5dp">

        <ImageView
            android:id="@+id/game_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginBottom="24px"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/game_title"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_thumbnail"
            android:layout_marginBottom="12px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/game_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_title"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:textAlignment="center"
            android:textSize="16sp"/>


    <LinearLayout
        android:layout_below="@id/game_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_start_button"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40px">

        <TextView
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:text="Start"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>

