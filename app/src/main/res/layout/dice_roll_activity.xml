<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    //Top View
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="16sp"
            android:maxLines="2"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Select number of Dice and then press on Tap button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:elevation="10dp">

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="1 Dice"
        android:textAlignment="center"
        android:textColor="#A19FE6"
        android:background="#ffffff"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="2 Dice"
            android:textAlignment="center"
            android:textColor="#A19FE6"
            android:background="#ffffff"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="3 Dice"
            android:textAlignment="center"
            android:textColor="#A19FE6"
            android:background="#ffffff"/>

    </LinearLayout>


    //Bottom layout
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent">

            <ImageView
            android:id="@+id/diceImage1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dice_1"/>

            <ImageView
                android:id="@+id/diceImage2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_dice_4"/>

            <ImageView
                android:id="@+id/diceImage3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_dice_6"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center">
        
        <Button
            android:id="@+id/tapButton"
            android:layout_width="wrap_content"
            android:layout_height="103px"
            android:text="Tap to Roll"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:background="@drawable/round_start_button"/>
        
        
    </LinearLayout>

</LinearLayout>